<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:background="@color/background_fragments"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_height="match_parent"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="16dp">



        <LinearLayout
            android:id="@+id/cont_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Номер протокола: "
                android:textColor="@color/black"
                android:textSize="@dimen/title_charters"

                />

            <TextView
                android:id="@+id/fine_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234567"
                android:textColor="@color/smock_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ф.И.О. Нарушителя: "
                android:textColor="@color/black"
                android:textSize="@dimen/title_charters" />

            <TextView
                android:id="@+id/fine_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Хаджиев Амир Тагирович"
                android:textColor="@color/smock_black" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сумма штрафа: "
                android:textColor="@color/black"
                android:textSize="@dimen/title_charters"

                />

            <TextView
                android:id="@+id/sum_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000 сом"
                android:textColor="@color/smock_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Код оплаты: "
                android:textColor="@color/black"
                android:textSize="@dimen/title_charters"

                />

            <TextView
                android:id="@+id/code_payment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="92898984"
                android:textColor="@color/smock_black" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>